#!/bin/bash
# Pre-commit hook to run CI checks locally before committing

set -e

echo "Running pre-commit checks..."
echo ""

# Check if there are any staged files
if git diff --cached --quiet; then
    echo "No staged changes to commit"
    exit 0
fi

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print status
print_status() {
    local status=$?
    if [ "$status" -eq 0 ]; then
        echo -e "${GREEN}✓${NC} $1 passed"
    else
        echo -e "${RED}✗${NC} $1 failed"
        exit 1
    fi
}

# 1. Check and remove ELF files
echo -e "${YELLOW}[1/4]${NC} Checking for ELF files..."
elf_removed=false
# Use process substitution to avoid subshell issue
while IFS= read -r file; do
    if [ -f "$file" ] && file "$file" | grep -q "ELF"; then
        echo -e "${YELLOW}Removing ELF file: $file${NC}"
        rm -f "$file"
        git reset HEAD "$file" 2>/dev/null || true
        elf_removed=true
    fi
done < <(git diff --cached --name-only --diff-filter=ACM)

if [ "$elf_removed" = true ]; then
    echo -e "${GREEN}✓${NC} ELF files removed"
else
    echo -e "${GREEN}✓${NC} No ELF files found"
fi
echo ""

# 2. Auto-format code
echo -e "${YELLOW}[2/4]${NC} Auto-formatting code..."
if cargo fmt; then
    echo -e "${GREEN}✓${NC} Code formatted"
    # Re-add formatted files to staging
    git diff --name-only | grep "\.rs$" | xargs -r git add 2>/dev/null || true
else
    echo -e "${RED}✗${NC} Formatting failed"
    exit 1
fi
echo ""

# 3. Check clippy warnings
echo -e "${YELLOW}[3/4]${NC} Checking clippy warnings..."
if ! cargo clippy --all -- -D warnings 2>&1; then
    echo -e "${RED}✗${NC} Clippy failed with warnings or errors"
    exit 1
else
    echo -e "${GREEN}✓${NC} Clippy checks passed"
fi
echo ""

# 4. Run tests
echo -e "${YELLOW}[4/4]${NC} Running tests..."
if ! cargo test --all 2>&1; then
    echo -e "${RED}✗${NC} Tests failed"
    exit 1
else
    echo -e "${GREEN}✓${NC} All tests passed"
fi
echo ""

echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"
echo ""